@model SaemNaKniga.Models.Publish_House_Models.PublisHouseBuyBook
@using SaemNaKniga.Models
@using SaemNaKniga.Models.Publish_House_Models

@{
    ViewBag.Title = "BuyBook";
}

<h2>BuyBook</h2>

<section>
    <div style="width:40%; float:left; display:inline-block;">
        <div class="">
            <div class="card-content">
                <div class="card-img">
                    <img class="image" src="@Model.publishHouse.ImgUrl" />
                </div>
                <div class="card-desc">
                    <h3 class="h3">@Model.publishHouse.Name</h3>
                    <p class="p">@Model.publishHouse.Description</p>
                    <br />
                </div>
            </div>
        </div>
    </div>

    <div class="card-content" style="width:55%; margin-left:5%; float:left;">
        <div style="width: 45%; float:left;">
            <img style="width:100%;" src="@Model.bookExtended.ImgUrl" />
            <h3 class="h3 book-name">@Model.bookExtended.Name</h3>
            <h3 class="h3 book-name">Year Released: @Model.bookExtended.Year</h3>
        </div>
        <div style="width: 45%; margin-left:5%; float:left">
            <h3 class="h3 book-details">Released in: @Model.bookExtended.Year</h3>
            <h3 class="h3 book-details" id="available">Available Units: @Model.bookExtended.Units</h3>
            <h3 class="h3 book-details">Price: @Model.bookExtended.Price USD</h3>
            <br />
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <div>@Html.LabelFor(m => m.UnitsBuy, new { @class = "h3" })</div>
                    <div>@Html.TextBoxFor(m => m.UnitsBuy, new { @class = "form-control", type = "number", @id = "quantity" })</div>
                    <div>@Html.ValidationMessageFor(m => m.UnitsBuy)</div>
                </div>

                <h3 id="total">Total price: 0 USD</h3>

                <div style="display:none" class="form-group">
                    <div>@Html.LabelFor(m => m.BookId)</div>
                    <div>@Html.TextBoxFor(m => m.BookId, new { @class = "form-control", type = "number" })</div>
                    <div>@Html.ValidationMessageFor(m => m.BookId)</div>
                </div>

                <div style="display:none" class="form-group">
                    <div>@Html.LabelFor(m => m.PublishHouseId)</div>
                    <div>@Html.TextBoxFor(m => m.PublishHouseId, new { @class = "form-control", type = "number" })</div>
                    <div>@Html.ValidationMessageFor(m => m.PublishHouseId)</div>
                </div>

                <input class="btn-card" type="submit" id="submit" value="Buy Book" />
            }
        </div>
    </div>
</section>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

<script src="~/Scripts/jquery-3.3.1.js"></script>

<script>
    $(document).ready(function () {
        $("#quantity").on('input', function () {
            var quantity = $("#quantity").val();
            if (quantity < 0) {
                $("#available").css("color", "red");
                $("#available").html("Don't put a negative number!");
                $("#submit").prop('disabled', true);
            }
            else {
                var price =@Model.bookExtended.Price;
                var available =@Model.bookExtended.Units-quantity;
                $("#total").html("Total price: " + quantity * price + " USD");
                if (available >= 0) {
                    $("#available").css("color", "black");
                    $("#available").html("Available Units: " + available);
                    $("#submit").prop('disabled', false);
                }
                else {
                    $("#available").css("color", "red");
                    $("#available").html("Not enough units available!");
                    $("#submit").prop('disabled', true);
                }
            }
        })
    })
</script>

